<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<%= attachment_image_tag @user, :image, format: 'jpeg', fallback: 'img/no_image.jpg', size: '100', class: "img-circle" %>
						<th>Name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>

			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "col-xs-12", style: "border-radius:5px;" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "col-xs-12", style: "border-radius:5px;" %>

				<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
			<% end %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<% if user_signed_in? %>
						<th><%= attachment_image_tag @user, :image,  format: 'jpeg', fallback:"img/no_image.jpg",size: '40x40', class: "img-circle" %></th>
						<td><%= link_to book.title, book_path(book.id), class: "book_#{@user.id}" %></td>
						<td><%= book.body %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

