<%= render 'users/list', book: @book %>
		<div class="col-lg-9">
			<h1>Users</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th><%= attachment_image_tag user, :image,  format: 'jpeg', fallback:"img/no_image.jpg",size: '40x40', class: "img-circle" %></th>
						<td><%= user.name %></td>
						<td><%= link_to 'show', user_path(user.id), class: "@user.id" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

