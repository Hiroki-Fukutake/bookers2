<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<%= attachment_image_tag current_user, :image, :fill, 100, 100, format: 'jpeg' %>
						<th>Name</th>
						<td><%= current_user.name %></td>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.	id}" %>

			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "col-xs-12" %>
			<h4>Opinion</h4>
			<%= f.text_area :body, class: "col-xs-12" %>

			<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
			<% end %>
		</div>
		<div class="col-lg-9">
			<h1>Users</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<th></th>
						<td><%= user.name %></td>
						<td><%= user.body %></td>
						<td><%= link_to 'show', user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

