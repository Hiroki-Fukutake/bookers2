<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<%= attachment_image_tag current_user, :image, format: 'jpeg', fallback: 'img/no_image.jpg', size: '100', class: "img-circle" %>
						<th>Name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>

			<h1>New Book</h1>
			<%= form_for(book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "col-xs-12 book_title", style: "border-radius:5px;" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "col-xs-12 book_body", style: "border-radius:5px;" %>

				<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
			<% end %>
		</div>