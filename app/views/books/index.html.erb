<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<%= attachment_image_tag current_user, :image, format: 'jpeg', fallback: 'img/no_image.jpg', size: '100' %>
						<th>Name</th>
						<th><%= current_user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= current_user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>

			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "col-xs-12 book_title" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "col-xs-12 book_body" %>

				<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
			<% end %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th><%= attachment_image_tag book.user, :image,  format: 'jpeg', fallback:"img/no_image.jpg",size: '40x40' %></th>
						<td><%= link_to book.title, book_path(book.id), class: "book_#{@book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

