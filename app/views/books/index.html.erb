<%= render 'users/list', book: @book %>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th><%= attachment_image_tag book.user, :image,  format: 'jpeg', fallback:"img/no_image.jpg",size: '40x40', class: "img-circle" %></th>
						<td><%= link_to book.title, book_path(book.id), class: "book_#{@book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

