<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<h1>User info</h1>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>Name</th>
						<td><%= current_user.name %></td>
						<td></td>
					</tr>
					<tr>
						<th>introduction</th>
						<td><%= current_user.introduction %></td>
					</tr>
				</tbody>
			</table>
			<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.	id}" %>

			<h1>New Book</h1>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class: "col-xs-12" %>
			<h4>Opinion</h4>
			<%= f.text_area :body, class: "col-xs-12" %>

			<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
			<% end %>
		</div>
		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<th></th>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

