<div class= "continer" >
	<div class= "row" >
		<div class= "col-xs-3" >
		</div>
		<div class= "col-lg-6" >
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class: "book_title" %>
				<h4>Opinion</h4>
				<%= f.text_area :body, class: "book_body" %>
				<%= f.submit "Create Book", class: "col-xs-12 btn btn-primary dropdown-toggle" %>
				<% end %>
				<%= link_to "Show", book_path, class: "book_#{@book.id}" %>
				|
				<%= link_to "Back", books_path, class: "back" %>
				<div class="col-xs-3">
				</div>
		</div>
	</div>
</div>